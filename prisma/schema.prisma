generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model product {
  id          Int      @id @default(autoincrement()) @db.SmallInt
  created_at  DateTime @default(now()) @db.Timestamptz(6)
  name        String?
  description String?
  price       Decimal? @db.Decimal
}
